<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <cn.zhaoshuhao.cniaosshop.widget.CNToolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="@string/pay_result"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_view_block"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/largerPadding">

        <ImageView
            android:id="@+id/id_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_success_128"/>


        <TextView
            android:id="@+id/id_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="支付成功"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/id_btn_return"
        style="@style/bigGreenButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/largerPadding"
        android:text="返回首页"/>

</LinearLayout>
